<%- include('./include/_header.ejs') %>
  <div class="container">
    <h2>Update Article</h2>
    <div class="form-section pt-4">
      <form action="/articles/<%= article.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="title form-group mt-4">
          <label for="title">Title</label>
          <input required type="text" name="title" placeholder="Give a title" value="<%= article.title %>"
            class="form-control" />
        </div>
        <div class="title form-group">
          <label for="title">Description</label>
          <textarea required name="description" rows="5" class="form-control" placeholder=" Description...">
<%= article.description %></textarea>
        </div>
        <div class="title form-group">
          <label for="title"> Body </label>
          <textarea required name="articleBody" rows="10" class="form-control" placeholder="Body...">
<%= article.articleBody %></textarea>
        </div>
        <div class="title form-group">
          <label for="image">Upload Image..</label>
          <input required type="file" name="image" value="/<%= article.image %>" />
        </div>
        <a href="/" class="btn btn-muted custom-btn">Cancel</a>
        <input type="submit" class="custom-btn" value="submit" />
      </form>
    </div>

  </div>
  <!-- app js link -->
  <script src="js/app.js"></script>
  </body>

  </html>